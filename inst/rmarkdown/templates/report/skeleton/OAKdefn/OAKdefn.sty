%%% Distributions/Functions -------------------------
%%% S - symbol, D - distribution, F - function

\newcommand{\comma}{\,,\:}

% Uniform
\DeclareMathOperator{\UnifSymbol}{Unif} 
\newcommand{\Unif}[1]{\UnifSymbol#1} 

% Normal
\DeclareMathOperator{\NormalS}{\mathcal{N}} 
\newcommand{\NormalD}[2]{\NormalS \paren{#1 \comma #2}} 
\newcommand{\StdNormalD}{\NormalD{0}{1}} 

% Beta
\DeclareMathOperator{\BetaS}{Beta} 
\newcommand{\BetaD}[2]{\BetaS \paren{#1 \comma #2}} 
\newcommand{\BetaF}[2]{B\paren{#1 \comma #2}} 

% Binomial
\DeclareMathOperator{\BinomialS}{Binomial}
\newcommand{\BinomialD}[2]{\BinomialS \paren{#1 \comma #2}}

% Poisson
\DeclareMathOperator{\PoissonS}{Poisson} 
\newcommand{\PoissonD}[1]{\PoissonS \paren{#1}} 

% Gamma
\DeclareMathOperator{\GammaS}{Gamma}
\newcommand{\GammaD}[2]{\GammaS\paren{#1 \comma #2}} 
\newcommand{\GammaF}[1]{\Gamma\paren{#1}} 

% Inverse Gamma
\DeclareMathOperator{\InvGammaS}{invGamma}
\newcommand{\InvGammaD}[2]{\InvGammaS\paren{#1 \comma #2}} 

% Chi-Square
\DeclareMathOperator{\ChiSqS}{\chi^2}
\newcommand{\ChiSqD}[1]{\ChiSqS \paren{#1}}

% Inverse Chi-Square
\DeclareMathOperator{\InvChiSqS}{\textrm{inv-}\chi^2}
\newcommand{\InvChiSqD}[1]{\InvChiSqS \paren{#1}}

%%% Probability -------------------------

