\newcommand{\Var}[1]{\VAR\paren{#1}}
\DeclareMathOperator{\AVAR}{Avar} % Asymptotic Variance
\newcommand{\Avar}[1]{\AVAR\paren{#1}}
\DeclareMathOperator{\SE}{se} % Standard Error
\newcommand{\se}[1]{\SE\paren{#1}}

